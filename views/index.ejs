<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>

<body>
    <header>
        <h1>All digimons</h1>
        <nav></nav>
    </header>
    <main>
        <div class="allContainer">
            <%data.forEach(val=>{%>
            <div class="container">
                <h3><%=val.name%></h3>
                <img src="<%=val.image%>" alt="">
                <p><%=val.level%></p>
                <div>
                    <button class="show">ADD</button>
                    <form class="form" action="/addToDb" method="GET">
                        <input type="text" name="name" value="<%=val.name%>">
                        <input type="text" name="image" value="<%=val.image%>">
                        <input type="text" name="level" value="<%=val.level%>">
                        <input type="submit" value="ADD TO DATABASE">
                    </form>
                </div>
            </div>
            <%})%>
        </div>
    </main>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="./js/app.js"></script>
</body>

</html>